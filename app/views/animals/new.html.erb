<h1>List of Animals</h1>

<%= form_with scope: :animal, url: animals_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :age %><br>
    <%= form.text_area :age %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
