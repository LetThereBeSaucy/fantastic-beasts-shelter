<h1>Fantastic Beasts Shelter</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

  <% @animals.each do |animal| %>
    <tr>
      <td><%= animal.name %></td>
      <td><%= animal.sex %></td>
      <td><%= animal.breed %></td>
      <td><%= animal.color %></td>
      <td><%= animal.likes %></td>
      <td><%= link_to 'Show', animals_path(animal) %></td>
    </tr>
  <% end %>
</table>
